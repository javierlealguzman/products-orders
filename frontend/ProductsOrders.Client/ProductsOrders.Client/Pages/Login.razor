@page "/login"

<MudPaper Class="pa-6 mx-auto mt-12" Style="max-width:400px;">
    <MudText Typo="Typo.h5" Class="mb-4">Login</MudText>

    <MudForm Model="LoginRequest" @ref="Form">
        <MudTextField 
            @bind-Value="LoginRequest.Username"
            Label="Username"
            Required="true"
            RequiredError="This field is required"
            Variant="Variant.Outlined"
            For="(() => LoginRequest.Username)"
            FullWidth="true" />

        <MudTextField 
            @bind-Value="LoginRequest.Password"
            Label="Password"
            Required="true"
            RequiredError="This field is required"
            Variant="Variant.Outlined"
            InputType="InputType.Password"
            For="(() => LoginRequest.Password)"
            FullWidth="true" />

        <MudButton 
            OnClick="LoginAction"
            Variant="Variant.Filled"
            Color="Color.Primary"
            Class="mt-4"
            FullWidth="true">
            Login
        </MudButton>
    </MudForm>

    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <MudText Color="Color.Error" Class="mt-2">@errorMessage</MudText>
    }
</MudPaper>